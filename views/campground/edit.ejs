<%- include("../partials/header") %>

<div class="container">
	<div class="column">
		<h1 style="text-align: center;">
			Edit <%=campground.name%>
		</h1>

		<form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" enctype="multipart/form-data" style="width: 30%; margin: 40px auto;">
			<div class="form-group">
				<input class="form-control" type="text"  name="name" value="<%=campground.name%>">
			</div>
			<div class="form-group">
				<label for="image">Upload Image</label>
			    <input id="image" type="file"  name="image" accept="image/*">
			</div>
			<div class="form-group">
				<input class="form-control" type="number"  name="price" min="1" step="0.1" value="<%=campground.price%>">
			</div>
			<div class="form-group">
			   <textarea class="form-control" name="description"><%=campground.description%></textarea>
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-success btn-block" type="submit">
					Update
		      	</button>
			</div>
			<a href="/campgrounds/<%=campground._id%>">Go Back</a>
		</form>
		
	</div>
</div>

<%- include("../partials/footer") %>