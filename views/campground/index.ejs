<%- include("../partials/header") %>

<div class="container-fluid">
	<header class="jumbotron">
		<h1>
			<i class="fas fa-campground">WELCOME TO Campify !</i>
		</h1>
		<p>
			View our best hand-picked campgrounds all over the world.
		</p>
		<p>
			<form action="/campgrounds" method="GET" class="form-inline">
				<div class="form-group">
					<input class="form-control" type="text" name="search" placeholder="Search Campgrounds">
					<button class="btn btn-success" type="submit">
						<i class="fas fa-search"></i>
					</button>
				</div>
			</form>
		</p>
		<p style="font-size: smaller;"> OR </p>
		<p>
			<a class="btn btn-primary btn-large" href="/campgrounds/new">
				Add Campgrounds
			</a>
		</p>
	</header>
	<div class="row text-center" style="display: flex; flex-wrap: wrap;">
		<% for(var i = 0; i < campground.length; i++){ %>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<img src="<%= campground[i].image %>" style="height: 200px; width: 100%;">
					<div class="caption">
						<h3><%= campground[i].name %></h3>
						<div>
							<span class="badge label-primary"><i class="fas fa-thumbs-up"></i> <%= campground[i].likes.length %></span>
						</div>
					</div>
					<p>
						<a href="/campgrounds/<%= campground[i]._id %>" class="btn btn-primary">Show Info...</a>
					</p>
				</div>	
			</div>	
		<% } %>
	</div>
</div>

<%- include("../partials/footer") %>