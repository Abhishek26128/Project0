<%- include("../partials/header") %>

<div class="container">
	<div class="column">
		<h1 style="text-align: center;">
			Create a new Campground
		</h1>

		<form action="/campgrounds" method="POST" enctype="multipart/form-data" style="width: 30%; margin: 40px auto;">
			<div class="form-group">
				<input class="form-control" type="text"  name="campground[name]" placeholder="campground name">
			</div>
			<div class="form-group">
				<label for="image">Upload Image</label>
			    <input id="image" type="file"  name="url" accept="image/*" required>
			</div>
			<div class="form-group">
				<input class="form-control" type="number"  name="campground[price]" placeholder="campground price" min="1" step="0.1">
			</div>
			<div class="form-group">
			   <textarea class="form-control" name="campground[description]" placeholder="description"></textarea>
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block" type="submit">
					Submit
		      	</button>
			</div>
			<a href="/campgrounds">Go Back</a>
		</form>
		
	</div>
</div>

<%- include("../partials/footer") %>